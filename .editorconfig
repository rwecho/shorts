root = true

[*]
charset = utf-8
end_of_line = crlf
indent_size = 4
indent_style = space
insert_final_newline = false
max_line_length = 120
tab_width = 4

[*.ets]
indent_size = 2
tab_width = 2

[*.ts]
indent_size = 2
tab_width = 2

[{*.bash,*.sh,*.zsh}]
indent_size = 2
tab_width = 2

[{*.json,*.jsonc}]
indent_size = 2

[{*.yaml,*.yml,.clang-format}]
indent_size = 2
